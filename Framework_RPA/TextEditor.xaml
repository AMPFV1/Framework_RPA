<Window x:Class="Framework_RPA.TextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Framework_RPA"
        mc:Ignorable="d"
        xmlns:rtf="clr-namespace:RTFEditor;assembly=RTFEditor"
        Title="Texteditor" Height="780" Width="800" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <DockPanel Loaded="DockPanel_Loaded">
        <rtf:RTFBox Name="rtfBox" DockPanel.Dock="Top" Height="700"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Name="btnSpeichern" Content="Speichern" Margin="0,0,10,10" Width="120" Height="30" Click="btnSpeichern_Click"/>
            <Button Name="btnAbbrechen" Content="Abbrechen" Margin="0,0,10,10" Width="120" Height="30" Click="btnAbbrechen_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
